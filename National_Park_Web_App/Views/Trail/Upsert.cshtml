@model National_Park_Web_App.Models.ViewModels.TrailVM

@{
    var title = Model.Trail.Id != 0 ? "Edit Trail" : "New Trail";
    var saveUpdate = Model.Trail.Id != 0 ? "Update" : "Save";
}

<form method="post" asp-action ="Upsert">

    <div  asp-validation-summary="ModelOnly" class="text-danger">
        @if(Model.Trail.Id != 0)
        {
            <input type="hidden" asp-for="@Model.Trail.Id"/>
        }
        <div class="row border p-2 m-2">
            <div class="col-10 border-bottom p-2 m-2">
                <h2 class="text-primary">@title</h2>
            </div>
            <div class="col-8">
                <div class="form-group row p-2 m-2">
                    <label class="col-4" asp-for="Trail.NationalParkId"></label>
                    <div class="col-8">
                        <select asp-for="Trail.NationalParkId" asp-items="@Model.NationalParkList" class="form-control">
                            <option value="">Select National Park</option>
                        </select>
                        <span asp-validation-for="Trail.NationalParkId" class="text-danger"></span>
                    </div>
                </div>
                n
                -
                <div class="form-group row p-2 m-2">
                    <label class="col-4" asp-for="Trail.Name"></label>
                    <div class="col-8">
                        <input asp-for="Trail.Name" class="form-control" />
                        <span asp-validation-for="Trail.Name" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row p-2 m-2">
                    <label class="col-4" asp-for ="Trail.Distance"></label>
                    <div class="col-8">
                        <input asp-for="Trail.Distance" class="form-control" />
                        <span asp-validation-for="Trail.Distance" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row p-2 m-2">
                    <label class="col-4" asp-for="Trail.Elevation"></label>
                    <div class="col-8">
                        <input asp-for="Trail.Elevation" class="form-control" />
                        <span asp-validation-for="Trail.Elevation" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group p-2 m-2">
                    <label class="col-4" asp-for="Trail.Difficulty"></label>
                    <div class="col-8">
                        <select asp-for="Trail.Difficulty" asp-items="Html.GetEnumSelectList<National_Park_Web_App.Models.Trail.DifficultyType>()" class="form-control"></select>
                            <span asp-validation-for="Trail.Difficulty" class="text-danger"></span>
                    </div>
                </div>



            </div>
        </div>
    </div>
</form>