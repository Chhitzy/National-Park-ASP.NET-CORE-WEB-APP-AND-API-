<div class="row">
    <div class="col-9">
        <h2 class="text-primary">Trail List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert" class="btn btn-info form-control"><i class="fas fa-plus"></i> Add New Trail</a>
    </div>
</div>

<div class="container rounded border p-1 m-1">
    <table id="tbldata" class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Trail Name</th>
                <th>National Park</th>
                <th>Distance</th>
                <th>Elevation</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/trail.js"></script>
}